<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
        #########################################################################
        NOTE: The app is locked to Dark-Mode to support #BlackLivesMatter cause.
        #########################################################################

        Base application theme.
        https://github.com/material-components/material-components-android/blob/master/docs/getting-started.md
    -->
    <style name="Theme.PoliceBrutality" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_grey_600</item>
        <item name="colorPrimaryDark">@color/blue_grey_900</item>
        <item name="colorPrimaryVariant">@color/blue_grey_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- The launcher theme. It sets the main window background drawable. -->
    <style name="Theme.PoliceBrutality.Launcher" parent="Theme.PoliceBrutality">
        <!-- Set fullScreen and window background in the theme so that the screen goes dark and
             removes the status bar as soon as possible. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Use drawable instead of color, see https://stackoverflow.com/a/23207466/1596587 -->
        <item name="android:windowBackground">@drawable/launcher_background</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color
        to match the windowBackground color for further branding-->
        <!-- <item name="colorPrimaryDark">@color/black</item> -->
    </style>
</resources>